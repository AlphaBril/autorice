## launch terminal
super + Return
	urxvt

## rofi launcher
super + d
	rofi -modi run,drun,window -lines 12 -padding 18 -width 60 -location 0 -show drun -sidebar-mode -columns 3 -font 'Noto Sans 8'

## launch common apps
super + shift + {f,w,g}
	{thunar,firefox,geany}
	
## volume control
XF86Audio{RaiseVolume,LowerVolume,Mute}
	amixer {-c 0 set PCM 4dB+,-c 0 set PCM 4dB-,set Master toggle}
	
## music control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

## make sxhkd reload its configuration files
super + s
	pkill -USR1 -x sxhkd
		
## take a screenshot
Print
	scrot 'Cheese_%a-%d%b%y_%H.%M.png' -e 'viewnior ~/$f'

## quit bspwm normally
super + control + Escape
	pkill panel; bspc quit

## reload bspwm config
super + shift + BackSpace
	pkill panel; bspwmrc

## close or kill app
super + {_,shift + }Escape
	bspc node {-c,-k}

## close app (common way)
alt + F4
	bspc node -c

## fullscreen
super + f
	bspc desktop -l next
	
## spit horizontal, split vertical, or cancel
super + {h,v,r}
	bspc node -p {east,south,cancel}

## toggle pseudo-tiled
super + {p,t}
    bspc node -t {pseudo_tiled,tiled}

## toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

## send the window in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

## focus the next node in the current desktop
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

## focus the next/previous desktop in the current monitor
ctrl + alt + {Left,Right}
	bspc desktop -f {prev.local,next.local}

## focus the last node/desktop
super + {Tab,grave}
	bspc {node,desktop} -f last

## focus or send to the given desktop
super + {_,shift + }{1-6}
	bspc {desktop -f,node -d} '^{1-6}'

## expanding windows
super + alt + {Left,Right,Up,Down}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}
	
## shrinking windows
super + control + {Left,Right,Up,Down}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}
	
## move floating windows
alt + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
